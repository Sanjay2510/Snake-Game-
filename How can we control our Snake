int dir=2; //0-down , 1-up, 2-right, 3-left
int []x_dir={0,0,1,-1}; // up down left right
int []y_dir={1,-1,0,0};
void keyPressed(){
int new_dir = keyCode;
if(keyCode==DOWN)
new_dir=0;
else if(keyCode==UP)
new_dir=1;
else if(keyCode==LEFT)
new_dir=3;
else if(keyCode==RIGHT)
new_dir=2; 
else
new_dir =-1;
if(new_dir!=-1)
dir=new_dir; 
}
